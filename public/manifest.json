{
	"name": "Copymaster",
	"version": "1.2",
	"description": "Copy and paste more stuff with Copy Master. Copy Master can copy and paste text and save it in 9 slots.",
	"permissions": ["storage", "contextMenus"],
	"options_page": "options.html",
	"background": {
		"page": "copymaster.html"
	},
	"content_scripts": [{
		"matches": ["<all_urls>"],
		"js": ["/js/content.js","/js/clipboard.js"]
	}],
	"commands": {
		"paste": {
			"suggested_key": {
				"default": "Ctrl+V",
				"mac": "Command+V"
			},
			"global": true,
			"description": "paste"
		},
		"copy": {
			"suggested_key": {
				"default": "Ctrl+C",
				"mac": "Command+C"
			},
			"global": true,
			"description": "copy"
		},
		"cut": {
			"suggested_key": {
				"default": "Ctrl+X",
				"mac": "Command+X"
			},
			"global": true,
			"description": "cut"
		}
	},
	"browser_action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "images/icon16.png",
			"32": "images/icon32.png",
			"48": "images/icon48.png",
			"128": "images/icon128.png"
		}
	},
	"icons": {
		"16": "images/icon16.png",
		"32": "images/icon32.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	},
	"manifest_version": 2
}
